<div class="container">
  <div class="row">
    <h1>User's <%= @user.name %> tweets</h1>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Text</th>
        </tr>
      </thead>
      <tbody>
        <% @tweets.each do |tweet| %>
        <tr>
          <td>
            <%= tweet.id %>
          </td>
          <td>
            <%= tweet.text %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate @tweets %>
  </div>
</div>

<div class="jumbotron">
  <div class="container">

    <h1>Subscribe</h1>
    <%= form_for @user, url: tweets_path, html: {class: 'form-inline'} do |f| %>
      <div class="form-group">
        <%= f.label :name,'Twitter user name' %>
        <%= f.text_field :name, class: 'form-control', required: 'required' %>
        <%= f.button 'Subscribe', class: 'btn btn-success' %>
      </div>
    <% end %>

  </div>
</div>